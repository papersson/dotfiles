{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(find:*)",
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(npm run type-check)",
      "Bash(pnpm lint)",
      "Bash(pnpm test:*)",
      "Bash(pnpm type-check)",
      "Bash(yarn lint)",
      "Bash(yarn test:*)",
      "Bash(yarn type-check)",
      "Bash(pytest:*)",
      "Bash(mypy:*)",
      "Bash(ruff:*)",
      "Bash(black:*)",
      "Bash(flake8:*)",
      "Bash(eslint:*)",
      "Bash(tsc:*)",
      "Read(**)",
      "Grep(**)",
      "Glob(**)",
      "WebSearch",
      "Bash(ls:*)",
      "Bash(for:*)",
      "Bash(do [ -f \"$f\" ])",
      "Bash(echo:*)",
      "Bash(done)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "default"
  },
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title \\\"Claude Code\\\" -message \\\"$CLAUDE_NOTIFICATION\\\" -sound default"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "rust-analyzer-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754122661879
  }
}
